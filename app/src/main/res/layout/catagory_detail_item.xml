<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="7dp"
    android:layout_marginTop="8dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DFFFD1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cat_detail_img"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:src="@drawable/fruits"
            android:scaleType="centerCrop"/>
        <!--            android:background="@drawable/border"-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cat_detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textSize="24sp"
                android:singleLine="true"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/cat_detail_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="product price"
                android:textColor="@color/purple_700"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/cat_detail_removeitem"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:src="@drawable/remove_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

                <TextView
                    android:id="@+id/cat_deatail_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:text="0"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@+id/relativeLayout"
                    app:layout_constraintEnd_toStartOf="@+id/details_additem"
                    app:layout_constraintStart_toEndOf="@+id/details_removeitem"
                    app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

                <ImageView
                    android:id="@+id/cat_detail_additem"
                    android:layout_width="45dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="7dp"
                    android:src="@drawable/add_circle"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/deatails_quantity"
                    app:layout_constraintTop_toTopOf="@+id/relativeLayout" />

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cat_detail_add_to_cart"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:text="Add to Cart"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/relativeLayout"
                android:background="@drawable/btn_bg_detailed"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>